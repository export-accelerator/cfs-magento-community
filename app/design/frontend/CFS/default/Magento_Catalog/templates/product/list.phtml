    <script type="text/javascript">
        require(['jquery', 'jquery/ui'], function($) {
            $(document).ready(function() {
                $(".increase-qty").click(function() {
                    var id = $(this).attr("data-id");
                    var qty = parseInt($("#qty-" + id).val()) + 1;
                    $("#qty-" + id).val(qty);
                })
                $(".decrease-qty").click(function() {
                    var id = $(this).attr("data-id");
                    var qty = parseInt($("#qty-" + id).val()) - 1;
                    if (qty >= 1) {
                        $("#qty-" + id).val(qty);
                    }

                })
            });
        });

<script>
    require(['Magento_Customer/js/customer-data', 'jquery'], function(customerData, $) {
        var cart = customerData.get('cart');
        var count = cart().summary_count;
        cart.subscribe(function() {
            if (cart().summary_count !== count) {
                count = cart().summary_count;
                $("button.action.tocart.primary").removeClass("in-cart");
                if (count > 0) {
                    cart().items.forEach((item) => {
                        let sku = item.product_sku ;
                        $("form[data-product-sku='"+sku+"']").find("button.action.tocart.primary").addClass("in-cart");
                    });
                    $(".minicart-wrapper").addClass("has-items");
                } else {
                    $(".minicart-wrapper").removeClass("has-items");
                }
            }
        });
    });
</script>

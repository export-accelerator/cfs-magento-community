<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
	<table name="cfs_slider">
		<column xsi:type="smallint" name="id" padding="7" unsigned="false" nullable="false" identity="true" comment="ID" />
        <column xsi:type="smallint" name="status" nullable="false" comment="Banner Status: Enabled is 1 and Disabled is 2" default="1" />
		<column xsi:type="varchar" name="title" nullable="true" length="255" comment="Slider Title" />
		<!-- <column xsi:type="longtext" name="description" nullable="true" comment="Slider description" /> -->
		<column xsi:type="varchar" name="url" nullable="true" length="255" comment="Url" />
		<column xsi:type="int" name="position" nullable="true" padding="10" comment="Sort Order" />
		<column xsi:type="varchar" name="image" nullable="false" length="255" comment="Slider Image" />
	    <constraint xsi:type="primary" referenceId="PRIMARY">
			<column name="id" />
		</constraint>
	</table>
</schema>

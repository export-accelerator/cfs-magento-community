<?xml version="1.0" encoding="UTF-8"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">od_brands_brands_form.brands_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Overdose\Brands\Block\Adminhtml\Block\Edit\SaveButton"/>
            <button name="delete" class="Overdose\Brands\Block\Adminhtml\Block\Edit\DeleteButton"/>
            <button name="back" class="Overdose\Brands\Block\Adminhtml\Block\Edit\BackButton"/>
        </buttons>
        <namespace>od_brands_brands_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>od_brands_brands_form.brands_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="brands_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="od_brands/brands/save"/>
        </settings>
        <dataProvider class="Overdose\Brands\Model\Product\DataProvider" name="brands_form_data_source">
            <settings>
                <requestFieldName>brand_id</requestFieldName>
                <primaryFieldName>brand_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="brand_id" formElement="input">
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>brand_id</dataScope>
            </settings>
        </field>
        <field name="name" sortOrder="30" formElement="input">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Name</label>
                <dataScope>name</dataScope>
            </settings>
        </field>
        <field name="identifier"  sortOrder="35" formElement="input">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Identifier</label>
                <dataScope>identifier</dataScope>
            </settings>
        </field>
        <field name="store_ids"  sortOrder="36" formElement="multiselect">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">block</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <tooltip>
                    <link>https://docs.magento.com/m2/ce/user_guide/configuration/scope.html</link>
                    <description>What is this?</description>
                </tooltip>
                <label translate="true">Store View</label>
                <dataScope>store_ids</dataScope>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="Magento\Cms\Ui\Component\Listing\Column\Cms\Options"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
        <field name="position"  sortOrder="38" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="number">0</item>
                    <item name="tooltip" xsi:type="array">
                    <item name="description" xsi:type="string">Number in range 0 - 999999</item>
                </item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                    <rule name="less-than-equals-to" xsi:type="number">999999</rule>
                    <rule name="greater-than-equals-to" xsi:type="number">0</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Position</label>
                <dataScope>position</dataScope>
                <!-- <tooltip><![CDATA[Number in range 0 - 999999]]></tooltip> -->
            </settings>
        </field>
        <field name="meta_title" sortOrder="50" formElement="input">
            <settings>
                <dataType>text</dataType>
                <dataScope>meta_title</dataScope>
                <label>Meta Title</label>
            </settings>
        </field>
        <field name="meta_description" sortOrder="60" formElement="textarea">
            <settings>
                <dataType>text</dataType>
                <dataScope>meta_description</dataScope>
                <label>Meta Description</label>
            </settings>
        </field>
        <field name="is_featured" sortOrder="65" formElement="checkbox">
            <settings>
                <dataType>boolean</dataType>
                <label>Is featured?</label>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="string">0</map>
                            <map name="true" xsi:type="string">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="logo" sortOrder="70" formElement="imageUploader">
            <settings>
                <elementTmpl>ui/form/element/uploader/image</elementTmpl>
                <dataType>string</dataType>
                <label translate="true">Brand logo</label>
                <visible>true</visible>
                <required>false</required>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <required>false</required>
                        <uploaderConfig>
                            <param xsi:type="url" name="url" path="od_brands/brands_logo/upload"/>
                        </uploaderConfig>
                        <previewTmpl>Magento_Catalog/image-preview</previewTmpl>
                        <openDialogTitle>Media Gallery</openDialogTitle>
                        <initialMediaGalleryOpenSubpath>catalog/category</initialMediaGalleryOpenSubpath>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
        <field name="content" formElement="wysiwyg">
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                </additionalClasses>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <label/>
                <dataScope>content</dataScope>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
    </fieldset>
</form>
